@page "/admin/roles"
@inherits RolesBase

@attribute [Authorize(Roles= "Administrator")]


@using Shopping.Web.Components


@if (RoleDtoList.Count < 1)
{

    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

}
else
{
    <h3 class="mb-5">Roles</h3>


    @if (RoleDtoList.Any())
    {

        foreach (var role in RoleDtoList)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id : @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a href="@($"admin/editrole/{role.Id}")" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-success">Unused</a>
                    <a href="#" class="btn btn-danger">Unused</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet
            </div>
        </div>
    }
}
